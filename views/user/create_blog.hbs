<form action="/create_blog" method="post">
    <div class="container" style="margin:auto">
        <h3 align="center">Create Blog</h3>
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="Title">
        </div>
        <div class="form-group">
            <label for="">Content</label>
            <textarea id="content" name="content" rows="4" cols="50" style="width:100%;" value="Enter a description here"></textarea>
        </div>
        <button class="btn btn-primary" style="margin:auto" type="submit">Submit</button>
    </div>
</form>